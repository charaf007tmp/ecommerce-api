{
  "openapi": "3.0.3",
  "info": {
    "title": "Welcome the the imgs center api center",
    "description": "made by charaf",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": " https://imgs-server-vxyd.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/Admin/Products/imgs": {
      "post": {
        "tags": ["Admin"],
        "summary": "Add product image",
        "description": "This will handel adding img’s 4 as max an 4mb per one as max",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "example": {
                  "message": "Images uploaded successfully!",
                  "results": [
                    {
                      "image_url": "https://cdn.jsdelivr.net/gh/charaf007tmp/imgs@main/images/1754568435400675965_planet-astronomy-outer-space-blue-black-background-5k-8k-3840x2160-1515.jpg",
                      "github_path": "images/1754568435400675965_planet-astronomy-outer-space-blue-black-background-5k-8k-3840x2160-1515.jpg"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/Admin/Products/{imageName}": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get product image",
        "description": "this will handel getting im’s from the back server to user in the fronte",
        "parameters": [
          {
            "name": "imageName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "image/*": {}
            }
          },
          "404": {
            "description": "Image not found"
          }
        }
      }
    }
  }
}
