{
  "openapi": "3.0.3",
  "info": {
    "title": "Welcome the the imgs center api center",
    "description": "made by charaf",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://e-comerce-think.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/Admin/Products/imgs": {
      "post": {
        "tags": ["Admin"],
        "summary": "Add product image",
        "description": "This will handel adding img’s 4 as max an 4mb per one as max",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "fileURLs": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "message": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "fileURLs": ["1749739362074247198_mainImg.png"],
                  "message": "1 files uploaded successfully",
                  "status": "success"
                }
              }
            }
          }
        }
      }
    },
    "/Admin/Products/{imageName}": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get product image",
        "description": "this will handel getting im’s from the back server to user in the fronte",
        "parameters": [
          {
            "name": "imageName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "image/*": {}
            }
          },
          "404": {
            "description": "Image not found"
          }
        }
      }
    }
  }
}
